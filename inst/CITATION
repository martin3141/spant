citHeader("To cite spant in publications use:")

bibentry(
  bibtype  = "Article",
  title    = "spant: An R package for magnetic resonance spectroscopy analysis",
  author   = "Martin Wilson",
  journal  = "Journal of Open Source Software",
  publisher= "The Open Journal",
  year     = "2021",
  volume   = "6",
  number   = "67",
  pages    = "3646",
  doi      = "10.21105/joss.03646",
  textVersion = "Wilson, M., spant: An R package for magnetic resonance spectroscopy analysis. JOSS 2021, 6(67), 3646."
)

